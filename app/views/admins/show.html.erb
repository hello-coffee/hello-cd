
<div class="container">

    <div class="row">
    <br>
        <div class="col-md-1"></div>
        <div class="col-md-2">

        </div>
        <div class="col-md-9"></div>
    </div>

    <br>

    <div class="row">
        <p class="p_news">NEWS投稿</p>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
                    <% if @news.errors.any? %>
                        <h3>入力した内容にエラーが<%= @news.errors.count %>件あります</h3>
                            <ul>
                                <% @news.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                                <% end %>
                            </ul>
                    <% end %>
            <%= form_for @news,url: news_index_path  do |n| %>
            <%= n.text_area :body %>
            <%= n.submit "投稿 ⇧", class:"btnbtnbtn" %>
            <% end %>
        </div>
        <div class="col-md-1"></div>

    </div>

    <br>

    <br>
    
    <div class="row">
        <div class="col-md-6">
            
            <p class="p_a">ユーザー一覧(10件表示)</p>
            <br>
            <% @all_user.each do |u| %>
            <%= link_to user_path(u.id) do %>
                <div>
                氏名：<%= u.last_name %>
                      <%= u.first_name %>
                  ID：<%= u.id %>
                </div>
                <% end %>
            <% end %>
            <%= paginate @all_user, class: "paginate" %>
            <br>
        </div>
        <div class="col-md-6">
            <p class="p_a">商品一覧(10件表示)</p>
            <br>
            <% @all_product.each do |p| %>
            <%= link_to product_path(p.id) do %>
                <div>
                            商品名：<%= p.title %>
                    アーティスト名：<%= p.artist_id %>
                            商品ID：<%= p.id %>
                </div>
                <% end %>
            <% end %>
            <%= paginate @all_product, class: "paginate" %>
            <br>
        </div>
        
    </div>
</div>
