
<!-- productのフォーム 始まり-->
<div class="nested-fields">
            <div class="field row" style="margin-top: 20px;">
                <%= f.label :商品名 %>
                <%= f.text_field :title, class:"col-xs-12 book_title" %>
            </div>

            <div class="field row" style="margin-top: 20px;">
                <%= f.label :ジャケット画像 %>
                <%= f.attachment_field :image, class:"user_image" %>
            </div>

            <div class="field row" style="margin-top: 20px;">
                <%= f.label :レーベル %>
                <%= f.text_field :label, class:"col-xs-12 book_body" %>
            </div>

        <div class="disc_list row" style="margin-top: 30px; margin-bottom: 30px; border-top: 1px solid #333333;"></div>


<!-- discのフォーム 始まり -->
            <div class="disc">
            <h3>DISCリスト</h3>
                <div id="discs">
                    <%= f.fields_for :discs do |disc| %>
                        <%= render 'disc_fields', f: disc %>
                    <% end %>
                    <div class="links">
                         <%= link_to_add_association 'DISCを追加',f, :discs, class: 'btn btn-primary', role: 'button'  %>
                    </div>
                </div>
            </div>
<!-- discのフォーム 終わり -->


        <div class="disc_list row" style="margin-top: 30px; margin-bottom: 30px; border-top: 1px solid #333333;"></div>


            <div class="col-md-4 field row" style="margin-top: 20px;">
                <%= f.label :価格 %>
                <%= f.text_field :price, class:"col-xs-12 book_title" %>
            </div>
            <div class="col-md-4 field row" style="margin-top: 20px;">
                <%= f.label :在庫数 %>
                <%= f.text_field :stock, class:"col-xs-12 book_title" %>
            </div>
            <div class="col-md-4 actions row" style="margin-top: 20px; float: right;">
                <%= f.submit '商品情報を追加', class:"btn btn-primary btn-lg" %>
            </div>
</div>

<!-- productのフォーム 終わり-->


