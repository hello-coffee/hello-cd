<%= render 'top/search' %>

<div class="container">
	<div class="row">
		<div class="col-lg-12">
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'top/sidebar',categories: @categories %>
		</div>
		<section class="col-lg-9">
			<h1><%= @artist.artist_name %>の商品一覧</h1>
				<% @products.each do |product| %>
					<div class="inline-block">
						<div class="col-lg-4">
							<%= link_to product_path(product.id) do %>
								<div class="text-center">
									<%= attachment_image_tag product, :image, fallback: "no_image.jpg", size: "200x200" %>
								</div>
								<div class="text-center">
									<%= link_to product.title, product_path(product.id) %>
							<% end %>
									<div class="text-center" style="border-top: 1px solid #000000; margin-bottom: 30px;">
										<%= link_to product.artist.artist_name, artist_path(product.artist.id) %>
									</div>
							</div>
						</div>
					</div>
				<% end %>
			<%= paginate @products %>
		</section>
	</div>
</div>

