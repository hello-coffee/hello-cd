<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h3 class="text-center"><%= current_user.last_name %>さんの買い物かご</h3>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @cart.cart_items.each do |cart_item| %>
					<tr>
						<td class="text-center"><%= attachment_image_tag cart_item.product, :image, fallback: "no_image.jpg", size: "100x100"  %></td>
						<td><%= cart_item.product.title %><br>
							<%= cart_item.product.artist.artist_name %>
						</td>
						<td><%= cart_item.buy_price %>円</td>
						<td>
							<%= cart_item.quantity %>枚
							<%# form_for(@cart_item) do |f| %>
    						<%#= f.label :数量選択 %>
   							<%#= f.select :quantity, @stock_array %>
   							<%#= f.submit "確定", class: "btn btn-default active" %>
							<%# end %>
						</td>
						<td><%= link_to "削除", cart_path(id: @cart.id,cart_item_id: cart_item.id), class: "btn btn-default active btn btn-danger", method: :delete, "data-confirm" => "買い物かごから削除していいですか?" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
			<div class="col-md-4 col-md-offset-1"></div>
  			<h3 class="col-md-4 col-md-offset-2">合計　<%= @total_price %>円</h3>
		<div class="row">
			<div class="col-lg-2 col-lg-offset-5">
				<%= link_to "戻る", products_path, class: "btn btn-default active" %>
				<%= link_to "購入へ進む", new_order_path, class: "btn btn-default active" %>
			</div>
		</div>
	</div>
</div>

