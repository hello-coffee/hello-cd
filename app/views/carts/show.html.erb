<h3><%= current_user.last_name %>さんの買い物かご</h3>
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<%# sum = 0 %>
					<% @cart.cart_items.each do |cart_item| %>
					<tr>
						<td><%#= attachment_image_tag cart_item.product.image_id, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
						<td><%= cart_item.product.title %><br>
							<%= @artist(cart_item.product.artist_id) %>
						</td>
						<td><%= cart_item.product.price %>円</td>
						<td>
							<% form_for(@stock) do |f| %>
    						<%= f.label :数量選択 %>
   							<%= f.select :stock, @current_stock_array %>
							<% end %>
						</td>
						<td><%= link_to "削除", cart_path, class: "btn btn-default active btn btn-danger", method: :delete, "data-confirm" => "買い物かごから削除していいですか?" %></td>
					</tr>
					<% end %>
				</tbody>
 				<%# sum += cart.cart_item.price * cart_items.quantity %>
				<%#= "合計" + sum + "円" %>
			</table>
		</div>
		<div class="row">
			<div class="col-lg-2 col-lg-offset-5">
				<%= link_to "戻る", products_path, class: "btn btn-default active" %>
				<%= link_to "購入へ進む", new_order_path, class: "btn btn-default active" %>
			</div>
		</div>
	</div>
</div>