

<div class="nested-fields form-inline">
	<div class="form-group">
	        <%= f.label :曲順 %>
		<div class="form-group" style="margin-right: 20px; display: inline-block; _display: inline;">
	        <%= f.text_field :song_sort, :size=>"10", :placeholder => "番号入力" %>
        </div>
        	<%= f.label :曲名 %>
		<div class="form-group" style="display: inline-block; _display: inline;">
	        <%= f.text_field :song_name, :size=>"50", :placeholder => "曲名を入力して下さい" %>
        </div>
		<div class="form-group" style="margin-left: 20px; display: inline-block; _display: inline;">
	        <%= link_to_remove_association "曲を削除", f, class: 'btn btn-danger', role: 'button'  %>
        </div>
	</div>
</div>