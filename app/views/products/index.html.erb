
<style>
p{
    text-align: center;
}




.p-box{
    border: 1px solid #000000;
}

.pi-box{
    border: 1px solid #000000;
    margin: 5px;
}


</style>


<%= render 'top/search',search: @search ,result: @result %>

<p>ここはTOPページ products#index</p>
<div class="container">
	<div class="row">
		<div class="img-top" >
		   <div style= "text-align: center;">TOP products#index</div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3">
            
           <%= render 'top/sidebar',categories: @categories %>
            
            
        </div>
        <div class="col-lg-9">
            <div class="row">
        		<div class="col-lg-1"></div>
        		<div class="col-lg-12">
            
        </div>
        	    </div>
        	</div>
        	
        	<div class="row">
        		<div class="col-lg-2"></div>
        		<div class="col-lg-8">	
        			<div class="row">
        			     <div class="news-box" style="border: 1px solid #000000">
        			        <p style="font-size: 30px; text-align: left; padding: 10px;">NEWS</p>
        			        <% @news.each do |n| %>
    			                 <li style="text-align: center; color: blue;">
    			                    <%= n.body %>
                                    <%= n.created_at %>
                                    <%= link_to '削除', news_path(n), method: :delete %>
                                </li>    
        			        <% end %>
        			     </div>
        			</div>
        		</div>
        		<div class="col-lg-2"></div>
        			<div class="row">
                     <% @products.each do |product| %>
    					 <div class="col-lg-4">
    					
    					    <div class="d-inline-block">
    					   
    							<%= attachment_image_tag product, :image, fallback: "no_image.jpg", size: "200x200" %>
    							<p></p>
    							<%= link_to product.title, product_path(product.id) %>
    							<p></p>
    							<%= link_to product.artist.artist_name, artist_path(product.artist.id) %>
    						</div>
    				    </div>
    			       <% end %>
            	    </div>
				</div>
            </div>
		</div>
    </div>
</div>
