<div class='container'>
<div class='row'>

    <div class='col-md-8 col-md-offset-2' style="margin-top: 50px; margin-bottom: 150px">
    <h1 style="margin-top: 10px; margin-bottom: 30px; text-align: center;">管理者ページ　新しい商品を追加</h1>

        <div class="form_list row" style="margin-top: 30px; margin-bottom: 20px; border-top: 1px solid #333333;"></div>

            <div class="nested-fields well well-compact col-md-5" style="margin: 20px; margin-bottom: 30px;" >
                <%= form_for(@artist) do |f| %>

                    <div class="form-group">
                        <div class="">
                            <%= f.label :新規にアーティストを追加 %><br>
                            <%= f.text_field :artist_name, class: "form-control", placeholder: "アーティスト名"%>
                        </div>
                    </div>
                    <div class="right" style="text-align: center">
                        <%= f.submit '追加', class: 'btn btn-warning' %>
                    </div>
                <% end %>
            </div>

            <div class="nested-fields well well-compact col-md-5" style="margin: 20px; margin-bottom: 30px;" >
                <%= form_for(@category) do |f| %>

                    <div class="form-group">
                        <div class="">
                            <%= f.label :新規にカテゴリーを追加 %><br>
                            <%= f.text_field :category_name, class: "form-control", placeholder: "カテゴリー名"%>
                        </div>
                    </div>
                    <div class="right" style="text-align: center">
                        <%= f.submit '追加', class: 'btn btn-warning' %>
                    </div>
                <% end %>
            </div>


<!-- productのフォーム 始まり-->
                <div class="product_form" style="margin-top: 20px;">
                <%= form_for(@product) do |f| %>




                    <div class="field row" style="margin-top: 20px;">
                        <%= f.label :アーティスト名 %><br>
                        <%= f.collection_select :artist_id, Artist.all, :id, :artist_name, :prompt => "アーティストを選択して下さい" %>

<!--                         <input placeholder="アーティスト名を入力して下さい" type="text" name="artist[artist_name]" id="artist_artist_name" /> -->
                    </div>


                    <div class="field row" style="margin-top: 20px;">
                        <%= f.label :カテゴリー名 %><br>
                        <%= f.collection_select :category_id, Category.all, :id, :category_name, :prompt => "カテゴリーを選択して下さい" %>
        　          </div>

                    <div class="field row" style="margin-top: 20px;">
                        <%= f.label :商品名 %>
                        <%= f.text_field :title, :placeholder => "商品名を入力して下さい", class:"col-xs-12 book_title" %>
                    </div>

                    <div class="field row" style="margin-top: 20px;">
                        <%= f.label :ジャケット画像 %>
                        <%= f.attachment_field :image, class:"user_image" %>
                    </div>

                    <div class="field row" style="margin-top: 20px;">
                        <%= f.label :レーベル %>
                        <%= f.text_field :label, :placeholder => "レーベルを入力して下さい", class:"col-xs-12 book_body" %>
                    </div>

                <div class="disc_list row" style="margin-top: 30px; margin-bottom: 30px; border-top: 1px solid #333333;"></div>


        <!-- discのフォーム 始まり  -->
                    <div class="disc">
                    <h3>DISCリスト</h3>
                        <div id="discs">
                            <%= f.fields_for :discs do |disc| %>
                                <%= render 'disc_fields', f: disc %>
                            <% end %>
                            <div id="links">
                                 <%= link_to_add_association 'DISCを追加',f, :discs, class: 'btn btn-primary', role: 'button'  %>
                            </div>
                        </div>
                    </div>
        <!-- discのフォーム 終わり -->


                <div class="disc_list row" style="margin-top: 30px; margin-bottom: 30px; border-top: 1px solid #333333;"></div>


                    <div class="col-md-4 field row" style="margin-top: 20px;">
                        <%= f.label :価格 %>
                        <%= f.text_field :price, :placeholder => "価格を入力して下さい", class:"col-xs-12 book_title" %>
                    </div>
                    <div class="col-md-4 field row" style="margin-top: 20px;">
                        <%= f.label :在庫数 %>
                        <%= f.text_field :stock, :placeholder => "在庫数を入力して下さい", class:"col-xs-12 book_title" %>
                    </div>
                    <div class="col-md-4 actions row" style="margin-top: 20px; float: right;">
                        <%= f.submit '商品情報を追加', class:"btn btn-primary btn-lg" %>
                    </div>
                <% end %>
            </div>
<!-- productのフォーム 終わり-->

        </div>

    </div>
</div>
</div>
