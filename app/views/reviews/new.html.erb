	<div class='container'>

		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-10">
			<h2>口コミ投稿画面</h2>
			<br>
			<p>商品名：「<%= @product.title %>」の口コミ</p>
		</div>

		<div class="row">

			<div class="col-md-4"></div>
			<div class="col-md-6">
			
				<%= form_for [@product, @review] do |f| %>
	
				 	<h4>件名を入力してください</h4>	
				 		
				 		<%= f.text_field :subject, placeholder:"口コミの件名を入力してださい", :size=>"50" %>
				 			
				 	<h4>口コミ本文を入力してください</h4>
				 		
				 		<%= f.text_area :review, placeholder:"口コミの本文を入力してださい", :size=>"50" %>
				 		<br>
				 		<%= f.submit "投稿" %>
				 		
				 		
				 <% end %>
				 <br>
		 </div>
		<br>
		<br>
			<div class="col-md-4"></div>
	</div>
