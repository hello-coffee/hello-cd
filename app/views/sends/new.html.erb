<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h4 class="text-center">買い物かご＞<strong style="color: red;">配送先選択</strong>＞決済方法選択＞購入完了</h4>
			<h2>配送先選択</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-6" style="margin-bottom: 50px; border: 2px solid #f7f7f7;">
			<h3>新規配送先登録</h3>
				<%= form_for @address, url: sends_path do |f| %>
					<h5>氏名</h5>
					<%= f.text_field :last_name, placeholder:"姓", :size=>"25" %>
					<%= f.text_field :first_name, placeholder:"名", :size=>"25" %>
					<h5>カナ</h5>
					<%= f.text_field :last_name_kana, placeholder:"姓（カナ）", :size=>"25" %>
					<%= f.text_field :first_name_kana, placeholder:"名（カナ）", :size=>"25" %>
					<h5>郵便番号</h5>
					<%= f.text_field :post_code, placeholder:"郵便番号", :size=>"20" %>
					<h5>住所</h5>
					<%= f.text_field :address, placeholder:"住所", :size=>"70" %>
					<h5>電話番号</h5>
					<%= f.text_field :tel, placeholder:"電話番号", :size=>"30" %>
					<h5>メールアドレス</h5>
					<%= f.email_field :email, placeholder:"メールアドレス", :size=>"50" %>
					<P></P>
					<%= f.submit "登録", class:"btn btn-primary btn-lg" %>
				<% end %>
		</div>
		<div class="col-lg-6" style="margin-bottom: 50px; border: 2px solid #f7f7f7;">
			<h3>登録済み配送先</h3>
				<%= form_for @address, url: sends_path do |f| %>
					<% @addresses.each do |address| %>
					<%= f.radio_button :id, address.id %>
					<%= f.label :address_id, address.address, value: address.id %><br>
					<% end %>
				<%= f.submit "この住所に配送", class:"btn btn-primary btn-lg" %>
				<% end %>
		</div>
	</div>
</div>

