<div>
<h1 style="text-align:center;">ユーザー情報<br>  編集</h1>
<%= form_for(@user) do |f| %>

<div class="form-inline text-center" style="height:30px;"></div>

<div class="form-inline text-center">
  <div class="form-group">
   <div>
    <%= f.label :last_name, "氏" %><br />
    <%= f.text_field :last_name %>
   </div>
  </div>
  <div class="form-group">
   <div>
    <%= f.label :first_name, "名" %><br />
    <%= f.text_field :first_name %>
   </div>
  </div>
</div>

<div class="form-inline text-center">
  <div class="form-group">
   <div>
    <%= f.label :last_name_kana, "氏(カナ)" %><br />
    <%= f.text_field :last_name_kana %>
   </div>
  </div>
  <div class="form-group">
   <div>
    <%= f.label :first_name_kana, "名(カナ)" %><br />
    <%= f.text_field :first_name_kana %>
   </div>
  </div>
</div>

<div class="form-inline text-center">
  <div class="form-group">
   <div>
    <%= f.label :post_code, "郵便番号" %><br />
    <%= f.text_field :post_code %>
   </div>
  </div>
  <div class="form-group">
   <div>
    <%= f.label :address, "住所" %><br />
    <%= f.text_field :address %>
   </div>
  </div>
</div>

<div class="form-inline text-center">
  <div class="form-group">
   <div>
    <%= f.label :tel, "電話番号" %><br />
    <%= f.text_field :tel %>
   </div>
  </div>
</div>

<div class="form-inline text-center">
  <div class="form-group">
   <div>
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.text_field :email %>
   </div>
  </div>
</div>



  <div class="actions" style="text-align:center;">
    <%= f.submit "完了" %>
  </div>
<% end %>
</div>